{
  "name": "youtube-mcp-server",
  "version": "1.0.0",
  "description": "YouTube MCP Server - Multi-user HTTP/SSE Docker deployment",
  "type": "module",
  "private": true,
  "main": "dist/http-server.js",
  "scripts": {
    "start": "node ./dist/http-server.js",
    "dev": "nodemon --exec \"npm run build && npm start\" --ext ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t youtube-mcp:latest .",
    "docker:build:tag": "docker build -t youtube-mcp:$(node -p \"require('./package.json').version\") -t youtube-mcp:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env youtube-mcp:latest",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f youtube-mcp",
    "docker:compose:restart": "docker-compose restart youtube-mcp"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.1.1",
    "@smithery/sdk": "^1.7.4",
    "@types/express": "^5.0.6",
    "express": "^5.2.1",
    "googleapis": "^129.0.0",
    "youtube-caption-extractor": "^1.8.2",
    "ytdl-core": "^4.11.5",
    "zod": "^3.25.46",
    "zod-to-json-schema": "^3.22.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@smithery/cli": "^1.4.6",
    "@types/node": "^18.0.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.47.0"
  },
  "keywords": [
    "youtube",
    "mcp",
    "model-context-protocol",
    "ai",
    "claude",
    "anthropic"
  ],
  "author": "Leonine Studios (based on work by Stefano Fiorini)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Leonine-Studios/youtube-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Leonine-Studios/youtube-mcp/issues"
  },
  "homepage": "https://github.com/Leonine-Studios/youtube-mcp#readme"
}
